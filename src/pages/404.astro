---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout
  title="Page not found — Compass"
  description="The page you're looking for doesn't exist."
>
  <div class="max-w-content mx-auto px-4 py-24 text-center">
    <h1 class="font-heading text-6xl font-bold text-compass-green mb-4">
      404
    </h1>
    <p class="text-xl text-text-secondary mb-8">
      This page doesn't exist — but there's plenty that does.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="/"
        class="px-6 py-3 bg-compass-green text-white font-heading font-semibold rounded hover:bg-opacity-90 transition-colors"
      >
        Go home
      </a>
      <a
        href="/series"
        class="px-6 py-3 border border-compass-green text-compass-green font-heading font-semibold rounded hover:bg-compass-green-light transition-colors"
      >
        Browse the series
      </a>
    </div>
  </div>
</BaseLayout>
