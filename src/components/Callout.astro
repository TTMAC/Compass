---
interface Props {
  type: "expert" | "takeaway" | "framework";
}

const { type } = Astro.props;

const styles: Record<string, string> = {
  expert:
    "border-l-4 border-compass-green bg-compass-green-light p-4 rounded-r-lg my-6",
  takeaway:
    "border-l-4 border-compass-gold bg-bg-secondary p-4 rounded-r-lg my-6",
  framework:
    "border-2 border-dashed border-compass-green p-4 rounded-lg my-6",
};

const labels: Record<string, string> = {
  expert: "Expert note",
  takeaway: "Key takeaway",
  framework: "Framework",
};
---

<aside class={styles[type]} role="note" aria-label={labels[type]} data-callout={type}>
  <p class="font-heading text-xs font-semibold text-text-secondary uppercase tracking-wide mb-2">
    {labels[type]}
  </p>
  <div class="text-sm leading-relaxed">
    <slot />
  </div>
</aside>
